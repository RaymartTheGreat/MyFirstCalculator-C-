#include <stdio.h>

int main()
{

    int num1, num2, addition, subtraction, multiplication, division;
    printf ("Please enter 1st number: ");
    scanf ("%d", &num1);
    printf ("Please enter 1st number: ");
    scanf ("%d", &num2);

    addition = num1 + num2;
    subtraction = num1 - num2;
    multiplication = num1 * num2;
    division = num1 / num2;

    printf ("The sum is %d.\n", addition);
    printf ("The difference is %d.\n", subtraction);
    printf ("The product is %d.\n", multiplication);
    printf ("The quotient is %d.\n", division);
	
    return 0;
}
